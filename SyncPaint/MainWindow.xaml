<Window x:Class="SyncPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncPaint"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="同步手绘板" Height="500" Width="750"
        Unloaded="Window_Unloaded"
        >
    <Grid>
        <Image  Stretch="Fill" Source="picture/bgpic.png"  Margin="0,0,0,215" />
        <Image Source="picture/teamname.png" Margin="623,416,-2,-11"/>
        <Button x:Name="btn_newPaint" Background="Transparent" Height="200" Width="200" Click="btn_newPaint_Click" BorderBrush="{x:Null}" Margin="114,155,430,116"  >
            <Image Stretch="Fill" Source="picture/new.png" Height="200" Width="200"/>
        </Button>
        <Button x:Name="btn_historyPaint" Background="Transparent" Height="200" Width="200"   Click="btn_historyPaint_Click" BorderBrush="{x:Null}" Margin="440,155,104,116">
            <Image Stretch="Fill" Source="picture/scan.png" Height="200" Width="200" />
        </Button>
    </Grid>
</Window>
